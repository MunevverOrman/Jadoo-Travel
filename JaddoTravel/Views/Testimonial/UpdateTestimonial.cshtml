@model JadooTravel.Dtos.TestimonialDtos.GetTestimonialByIdDto
@{
    ViewData["Title"] = "Görüş Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 fw-semibold">Müşteri Görüşünü Düzenle</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="TestimonialId" />

                        <div class="mb-3">
                            <label class="form-label">Ad Soyad</label>
                            <input asp-for="NameSurname" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Yorum</label>
                            <textarea asp-for="Comment" rows="4" class="form-control"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fotoğraf URL</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <small class="text-muted">Örn: /public/assets/img/testimonial/author.png</small>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            Kaydet
                        </button>
                        <a asp-controller="Testimonial" asp-action="TestimonialList"
                           class="btn btn-secondary ms-2">
                            Listeye Dön
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
