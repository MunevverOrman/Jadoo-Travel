@model List<JadooTravel.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-4">
    <div class="col-12">
        <div class="card">

           
            <div class="card-header">
                <h5 class="mb-0 fw-semibold">Kategori Listesi</h5>
            </div>

     
            <div class="card-body table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th style="width: 100px;">Sil</th>
                            <th style="width: 120px;">Güncelle</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryId</td>
                                    <td>@item.CategoryName</td>
                                    <td>
                                        <a href="/Category/DeleteCategory/@item.CategoryId"
                                           class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                    <td>
                                        <a href="/Category/UpdateCategory/@item.CategoryId"
                                           class="btn btn-sm btn-info">Güncelle</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    Sistemde kayıtlı kategori bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="/Category/CreateCategory/" class="btn btn-primary">
                        Yeni Kategori Ekle
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
