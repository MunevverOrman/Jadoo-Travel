@model List<JadooTravel.Dtos.DestinationDtos.ResultDestinationDto>
@{
    ViewData["Title"] = "Turlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row mt-4">
    <div class="col-12">
        <div class="card">

            <div class="card-header">
                <h5 class="mb-0 fw-semibold">Turlar Listesi</h5>
            </div>


            <div class="card-body table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Şehir / Ülke</th>
                            <th>Fiyat (₺)</th>
                            <th>Kapasite</th>
                            <th style="width:100px;">Sil</th>
                            <th style="width:120px;">Güncelle</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DestinationId</td>
                                    <td>@item.CityCountry</td>
                                    <td>@item.Price</td>
                                    <td>@item.Capacity</td>
                                    <td>
                                        <a href="/Destination/DeleteDestination/@item.DestinationId"
                                           class="btn btn-sm btn-danger">
                                            Sil
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Destination/UpdateDestination/@item.DestinationId"
                                           class="btn btn-sm btn-info">
                                            Güncelle
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    Sistemde kayıtlı tur bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            <div class="mt-3">
                    <a href="/Destination/CreateDestination/" class="btn btn-primary">
                        Yeni Tur Ekle
                    </a>
                </div>

            </div>

        </div>
    </div>
</div>
